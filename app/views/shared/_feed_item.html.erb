<li id="<%= feed_item.id %>">
	<span class ="titlepost">
		<%= link_to feed_item.title, feed_item %>
	</span>
    <span class="content">
    	<%= wrap(truncate feed_item.content, length: 50) %>
    	<%= link_to 'read more', feed_item %> 
    </span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    </span>
</li>